        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainPageSlidesAdapter"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />

            </intent-filter>
        </activity>
        <activity
            android:name=".SettingPage.SettingActivity"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" />
        <activity
            android:name=".SettingPage.HelpActivity"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" />
        <activity
            android:name=".SettingPage.TypeCreator"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" />
        <activity
            android:name=".SettingPage.TypeManagementActivity"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" />
        <activity
            android:name=".SpecificTaskCreator"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" />
        <!--activity android:name=".SecondMainPageLauncher" />-->
        <activity
            android:name=".SettingPage.TaskManagementActivity"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" />
