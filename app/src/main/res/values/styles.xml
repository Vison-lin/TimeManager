<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/consola</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="CheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
    <item name="android:button">@drawable/checkbox</item>
        <item name="android:paddingLeft">25dp</item>
      <item name="android:maxHeight">10dp</item>

    </style>

    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/violet</item>
    </style>

    <style name="MyTimepicker" parent="android:Theme.Material.Light.Dialog">
        <!--<item name="android:background">@color/background_color</item>-->
        <item name="android:colorForeground">@color/black</item>
        <item name="android:colorControlActivated">@color/violet</item>
        <item name="android:colorFocusedHighlight">@color/green</item>
        <item name="android:colorForegroundInverse">@color/green</item>
        <item name="android:colorAccent">@color/blue</item>


    </style>




</resources>
